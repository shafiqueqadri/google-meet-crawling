                        </div> -->
                        {{#each transcripts}}
                            <div class="rt-messagecontentholder">
                                <div class="rt-messageleftarea">
                                    <figure>
                                        <img src="{{img}}"
                                            alt="Organizer Image">
                                    </figure>
                                    <div>
                                        <b style="margin-bottom: 15px;">
                                            {{ name }}
                                        </b>
                                    </div>
                                    <div class="rt-messagedescription">
