            <div class="rt-chatformarea">
                <form class="rt-formtheme">
                    <div class="rt-twocolums">
                        <div class="rt-chatmessagearea">
                            <!-- <div class="rt-messageareahead">
                            <figure>
                                <img src="http://css.akkastechdemo.com/images/users/organizer-img.jpg" alt="Organizer Image">
                            </figure>
                            <div class="rt-chatholderdetail">
                                <h4>Raelynn Cobb</h4>
                                <p> Your Instructor</p>
