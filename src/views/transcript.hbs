    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <style>
        /* =============================================
                Chat Style
        ============================================= */
        .rt-chat {
            width: 100%;
            float: left;
        }

        .rt-chat .rt-twocolums {
            margin: 0;
        }

        .rt-chatformarea {
            width: 100%;
            float: left;
            height: 100vh;
        }

        .rt-formtheme {
            float: left;
            width: 100%;
        }

        .rt-chatlistholder {
            float: left;
            width: 330px;
            background: #fff;
            padding: 20px 0 0;
            border-radius: 15px;
            height: 100vh;
        }

        .rt-chatlist {
            width: 100%;
            float: left;
        }

        .rt-chatlisttitle {
            width: 100%;
            float: left;
            padding: 10px 20px;
        }

        .rt-chatlisttitle h3 {
            margin: 0;
            color: #2078f3;
            font-size: 18px;
            font-weight: 600;
            line-height: 21px;
            text-transform: capitalize;
        }

        .rt-chatlist .form-group {
            padding: 0 20px;
            position: relative;
            margin: 0 !important;
        }

        .rt-chatlist .form-group input {
            height: 40px;
            font-size: 14px;
            box-shadow: none;
            position: relative;
            width: 100%;
            background: #f5f6fa;
            padding: 10px 50px 10px 20px;
        }

        .rt-chatlist .form-group i {
            top: 0;
            z-index: 2;
            right: 40px;
            font-size: 20px;
            line-height: 40px;
            position: absolute;
            color: var(--Madison);
        }

        .rt-chatlistcontentholder {
            width: 100%;
            float: left;
            padding: 20px 0 0;
        }

        .rt-chatgrouplist {
            width: 100%;
            float: left;
            height: calc(100vh - 320px);
        }

        .rt-chartsectiontitle {
            width: 100%;
            float: left;
            padding: 0 20px;
        }

        .rt-chartsectiontitle h4 {
            margin: 0;
            color: #2b3b4b;
            font-size: 16px;
            font-weight: 700;
            line-height: 21px;
            text-transform: capitalize;
        }

        .rt-chatgroupsarea {
            width: 100%;
            float: left;
            overflow: auto;
            padding: 0 0 20px;
            height: calc(100vh - 70px);
        }

        .rt-chatgroupsarea::-webkit-scrollbar {
            display: none;
        }

        .rt-userchatsarea {
            height: calc(100vh - 73vh);
        }

        .rt-chatgroupsarea ul {
            margin: 0;
            padding: 0;
            width: 100%;
            float: left;
            list-style: none;
        }

        .rt-chatgroupsarea ul li {
            width: 100%;
            float: left;
            padding: 15px 0;
            list-style-type: none;
            border-bottom: 1px solid #f5f6fa;
        }

        .rt-chatlistitem {
            width: 100%;
            float: left;
            padding: 20px;
            position: relative;
        }

        .rt-chatlistitem figure {
            float: left;
            width: 46px;
            height: 46px;
            overflow: hidden;
            border-radius: 50%;
            margin: 0 20px 0 0;
            border: 4px solid #f5f6fa;
        }

        .rt-groupimg {
            color: #fff;
            width: 46px;
            float: left;
            height: 46px;
            font-size: 14px;
            font-weight: 700;
            line-height: 37px;
            text-align: center;
            border-radius: 50%;
            margin: 0 20px 0 0;
            background: #2078f3;
            border: 4px solid #f5f6fa;
            text-transform: uppercase;
        }

        .rt-chatlistitem figure img {
            width: 100%;
            height: auto;
            display: block;
        }

        .rt-userchatsarea .rt-chatholderdetail {
            padding: 7px 0;
        }

        .rt-chatholderdetail {
            float: left;
            width: calc(100% - 70px);
        }

        .rt-chatholderdetail h5 {
            margin: 0;
            color: #2b3b4d;
            font-size: 14px;
            font-weight: 700;
            line-height: 17px;
            padding: 0 40px 0 0;
            text-transform: capitalize;
        }

        .rt-chatholderdetail p {
            margin: 0;
            color: #727a86;
            font-size: 12px;
            font-weight: 400;
            padding: 0 30px 0 0;
            line-height: 15px;
        }

        .rt-chatholderdetail p span {
            font-weight: 700;
            text-transform: capitalize;
        }

        .rt-lastupdatetime {
            top: 20px;
            right: 20px;
            display: block;
            color: #b8bcc2;
            font-size: 12px;
            font-weight: 400;
            line-height: 15px;
            position: absolute;
        }

        .rt-unreadconservation {
            right: 20px;
            color: #fff;
            bottom: 30px;
            padding: 0 5px;
            font-size: 10px;
            font-weight: 800;
            line-height: 17px;
            position: absolute;
            background: #2078f3;
            border-radius: 100px;
        }

        .rt-chatmessagearea {
            background: #fff;
            position: relative;
            border-radius: 15px;
            width: 800px;
            height: 100vh;
            margin: 0 auto;
        }

        .rt-messageareahead {
            width: 100%;
            float: left;
            padding: 15px 30px;
            background: #f5f6fa;
            border-radius: 15px 15px 0 0;
        }

        .rt-messageareahead figure {
            width: 50px;
            float: left;
            height: 50px;
            margin: 0 15px 0 0;
            border-radius: 50%;
            border: 4px solid #fff;
        }

        .rt-messageareahead figure img {
            width: 100%;
            height: auto;
            display: block;
            border-radius: 50%;
        }

        .rt-chatholderdetail {
            float: left;
            width: calc(100% - 66px);
        }

        .rt-chatholderdetail h4 {
            margin: 0;
            color: #2b3b4b;
            font-size: 16px;
            font-weight: 700;
            line-height: 20px;
            text-transform: capitalize;
        }

        .rt-chatholderdetail p {
            margin: 0;
            color: #727a86;
            font-size: 14px;
            font-weight: 600;
            line-height: 17px;
        }

        .rt-messagecontentholder {
            width: 100%;
            float: left;
            overflow: auto;
            background: #fff;
            padding: 20px 30px;
            //height: calc(100vh - 155px);
        }

        .rt-messagecontentholder::-webkit-scrollbar {
            display: none;
        }

        .rt-messagerightarea {
            width: 100%;
            float: right;
        }

        .rt-messagerightarea figure {
            width: 50px;
            height: 50px;
            float: right;
            margin: 0 0 0 10px;
            border-radius: 50%;
            border: 4px solid #fff;
        }

        .rt-messagerightarea figure img {
            width: 100%;
            height: auto;
            display: block;
            border-radius: 50%;
        }

        .rt-messagerightarea .rt-messagedescription {
            width: auto;
            float: right;
            padding: 20px;
            max-width: 620px;
            background: #2078f3;
            border-radius: 15px;
        }

        .rt-messagerightarea .rt-messagedescription p {
            margin: 0;
            color: #fff;
            font-size: 16px;
            font-weight: 400;
            line-height: 20px;
        }

        .rt-messagerightarea span {
            width: 100%;
            float: right;
            color: #b8bcc2;
            text-align: right;
            font-size: 12px;
            line-height: 15px;
            padding: 5px 65px 20px 0;
        }

        .rt-messageleftarea {
            width: 100%;
            float: left;
        }

        .rt-messageleftarea figure {
            width: 50px;
            height: 50px;
            float: left;
            margin: 0 10px 0 0;
            border-radius: 50%;
            border: 4px solid #fff;
        }

        .rt-messageleftarea figure img {
            width: 100%;
            height: auto;
            display: block;
            border-radius: 50%;
        }

        .rt-messageleftarea .rt-messagedescription {
            width: auto;
            float: left;
            padding: 20px;
            max-width: 620px;
            background: #f5f6fa;
            border-radius: 15px;
        }

        .rt-messageleftarea .rt-messagedescription p {
            margin: 0;
            color: #2b3b4b;
            font-size: 16px;
            font-weight: 400;
            line-height: 20px;
        }

        .rt-messageleftarea span {
            width: 100%;
            float: left;
            color: #b8bcc2;
            font-size: 12px;
            line-height: 15px;
            padding: 5px 0 20px 65px;
        }

        .rt-messageinput {
            left: 0;
            bottom: 30px;
            margin: 0 30px;
            position: absolute;
            width: calc(100% - 60px);
        }

        .rt-messageinput .form-group {
            margin: 0 !important;
        }

        .rt-messageinput .form-group input {
            width: 100%;
            float: left;
            padding: 10px 200px 10px 30px;
        }

        .rt-messageinput .form-group .rt-themebtn {
            top: 50%;
            right: 10px;
            text-align: center;
            position: absolute;
            -moz-transform: translateY(-50%);
            -webkit-transform: translateY(-50%);
            -o-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
        }

        .rt-inputfile {
            top: 50%;
            right: 155px;
            text-align: center;
            position: absolute;
            -moz-transform: translateY(-50%);
            -webkit-transform: translateY(-50%);
            -o-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
        }

        .rt-inputfile input[type=file] {
            display: none;
        }

        .rt-inputfile label {
            float: left;
            height: 30px;
            color: #727a86;
            font-size: 12px;
            cursor: pointer;
            line-height: 30px;
            border-radius: 50%;
            background: #f5f6fa;
            width: 30px !important;
            margin: 0 !important;
        }

        .rt-inputfile label i {
            display: block;
            line-height: 30px;
        }
    </style>
</head>

<body>
